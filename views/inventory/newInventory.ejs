<% if (title) {%>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<div class="inventory-form">
    <form id="inventoryForm" action="./newInventory" method="post">
        <label for="className">Classification</label>
        <select name="classifitaction_name" id="className" required>
            <option value="" disabled selected>Choose a Classification</option>
            <% classifications.forEach(classification => { %>
                <option value="<%= classification.classification_name %>"><%= classification.classification_name %></option>
            <% }) %>
        </select>
        <label for="invMaker">Make</label>
        <input type="text" minlength="3" name="inv_make" id="invMake" placeholder="Min of 3 characters" required>
        <label for="invModel">Model</label>
        <input type="text" minlength="3" name="inv_model" id="invModel" placeholder="Min of 3 characters" required>
        <label for="invDescription">Description</label>
        <textarea name="inv_description" id="invDescription" cols="30" rows="10" required></textarea>
        <label for="invImg">Image Path</label>
        <input type="text" name="inv_image" id="invImg" required>
        <label for="invThumb">Thumbnail Path</label>
        <input type="text" name="inv_thumbnail" id="invThumb" required>
        <label for="invPrive">Price</label>
        <input type="number" step="any" name="inv_price" id="invPrice" placeholder="decimal or integer" required>
        <label for="invYear">Year</label>
        <input type="text" name="inv_year" id="invYear" pattern="^\d{4}$" title="Please enter a 4-digit year (e.g., 2024)" placeholder="4-digit year" required>
        <label for="invMiles">Miles</label>
        <input type="number" name="inv_miles" id="invMiles" placeholder="digits only" required>
        <label for="invColor">Color</label>
        <input type="text" name="inv_color" id="invColor" required>

        <button type="submit" class="btn">Add Inventory</button>
    </form>
</div>