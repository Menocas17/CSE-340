<% if (title) {%>
    <h1 class="management-titles"><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<%- messages() %>

<ul class="management-links">
    <li><a href="/inv/newClassification" class="action-button">Add New Classification</a></li>
    <li><a href="/inv/newInventory" class="action-button">Add New Inventory</a></li>
</ul>

<h2 class="management-titles">Manage Inventory</h2>
<p class="management-p">Select a classification from the list to see the items that belongs to that classificaiton</p>

<select name="classification_id" id="classificationList" required>
    <option value="" disabled selected>Choose a Classification</option>
    <% classifications.forEach(classification => { %>
        <option value="<%= classification.classification_id %>"><%= classification.classification_name %></option>
    <% }) %>
</select>


<table id="inventoryDisplay"></table>
<noscript>JavaScript must be enabled to use this page.</noscript>
<script src="../../js/inventory.js"></script>